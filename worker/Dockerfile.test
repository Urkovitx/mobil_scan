FROM python:3.10-slim

ENV DEBIAN_FRONTEND=noninteractive

WORKDIR /app

# Install minimal system deps
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
       ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install
COPY requirements-worker-test.txt ./
RUN pip install --no-cache-dir --default-timeout=1000 -r requirements-worker-test.txt

# Create a simple test script instead of copying processor.py
RUN echo 'import paddlepaddle\nprint("PaddlePaddle version:", paddlepaddle.__version__)\nprint("âœ… Worker test image built successfully!")' > test.py

CMD ["python", "test.py"]
